source 'http://rubygems.org'

# HTTP & APIs
# ===========
gem 'curb'                           # HTTP client using Curl - fast and non-blocking

# testing
# =======
gem 'rspec'                          # Used for testing the application
gem 'webmock'                        # Intercepts HTTP calls for testing
gem 'vcr'                            # Records and replays HTTP calls and responses for testing (works offline, no rate limits)

# debugging
# =========
gem 'byebug'                         # allow debugging at runtime via CLI (insert `byebug` in code and run it)
